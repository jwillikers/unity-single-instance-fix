root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 2
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true

[*.adoc]
indent_size = unset

[CMakeLists.txt]
indent_size = unset
max_line_length = off

[*.{adoc,envrc,nu,yaml,yml}]
max_line_length = off

[*.{c,cpp,hpp,h.in}]
indent_size = off

[{justfile,.justfile,*.just}]
indent_size = 4
